<h1>Sign in</h1>

<%= form_tag('/signin', method: :post) do %>

<%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username") %> <br>
<%= label_tag(:password, "Enter password:") %>
<%= password_field_tag :password %> <br>
 <%= submit_tag "Sign In" %>
<% end %>

<%= link_to 'Sign Up', '/users/new'%>