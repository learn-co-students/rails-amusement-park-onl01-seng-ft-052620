<%= form_for @user, url: signup_path do |f| %>
    <div class="form-group">
        <%= f.label :name, "Name" %>    
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :height, "Height (in inches)" %>
        <%= f.number_field :height, min: 0, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
        <%= f.number_field :happiness, min: 1, max: 5, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
        <%= f.number_field :nausea, min: 1, max:5, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :tickets, "How many tickets do you have?" %>
        <%= f.number_field :tickets, min: 0, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :admin, "Check box if you are an admin" %>
        <%= f.check_box :admin, class: "form-check-input" %>
    </div>

    <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.text_field :password, class: "form-control" %>

        <div class="actions">
            <br>
            <%= f.submit "Create User", class: "btn btn-primary" %>
        </div>
    </div>


<% end %>