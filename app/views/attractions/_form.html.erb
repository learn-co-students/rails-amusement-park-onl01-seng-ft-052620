<%= form_for @attraction do |f| %>
    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control"%>
    </div>

    <div class='form-group'>
        <%= f.label :min_height %>
        <%= f.number_field :min_height, min:0, class: "form-control"%>
    </div>

    <div class='form-group'>
        <%= f.label :happiness_rating %>
        <%= f.number_field :happiness_rating, min:0,max:5, class: "form-control"%>
    </div>

    <div class='form-group'>
        <%= f.label :nausea_rating %>
        <%= f.number_field :nausea_rating, min:0, max:5, class: "form-control"%>
    </div>
    <div class='form-group'>
        <%= f.label :tickets %>
        <%= f.number_field :tickets, min:0, class: "form-control"%>
    </div>

    <div class="actions">
        <%= f.submit btn, class:"btn btn-primary" %>
    </div>
<% end %>