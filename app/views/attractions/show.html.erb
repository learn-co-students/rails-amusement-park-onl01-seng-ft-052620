<h1><%= @attraction.name %> Attraction</h1>
<button><%= link_to "Edit Attraction", edit_attraction_path(@attraction) unless !current_user.admin %></button>
<%= form_for @ride do |f| %> 
  <%= f.hidden_field :attraction_id, value: @attraction.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit 'Go on this ride' %>
<% end %>